[user]
	name = Andrew Jones
	email = ximenean@hotmail.com
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	editor = vim
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[push]
	default = current
[merge]
	tool = meld
[difftool]
	prompt = false
[mergetool]
	prompt = false
[diff]
	tool = meld
[color]
	ui = true
[alias]
  a = add -p
	aliases = config --get-regexp alias
	amend = commit --amend
	branches = branch -a
  c = commit
	co = checkout
	cob = checkout -b
	discard = checkout --
  f = fetch -p
  p = push
  plog = log --graph --pretty='format:%C(red)%d%C(reset)%C(yellow)%h%C(reset) %ar %C(green)%aN%C(reset) %s'
	remotes = remote -v
	stashes = stash list
	tags = tag
	uncommit = reset --mixed HEAD~
	unstage = reset -q HEAD --
  st = status -sb
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[help]
	autocorrect = -1
[pull]
	rebase = true
