[alias]
  a = add -p
  aliases = config --get-regexp alias
  amend = commit --amend
  branches = branch -a
  c = commit
  co = checkout
  cob = checkout -b
  discard = checkout --
  f = fetch -p
  p = push
  plog = log --graph --pretty='format:%C(red)%d%C(reset)%C(yellow)%h%C(reset) %ar %C(green)%aN%C(reset) %s'
  remotes = remote -v
  stashes = stash list
  tags = tag
  uncommit = reset --mixed HEAD~
  unstage = reset -q HEAD --
  st = status -sb
